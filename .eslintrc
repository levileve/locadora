{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "no-param-reassign": "off",
      "max-len": [
        "error",
        200
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "any",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": [
            "if"
          ]
        },
        {
          "blankLine": "any",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": "*"
        },
        {
          "blankLine": "never",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": [
            "const",
            "let",
            "var"
          ]
        },
        {
          "blankLine": "always",
          "prev": [
            "if",
            "for",
            "while",
            "block-like",
            "block"
          ],
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": [
            "for",
            "while",
            "block-like",
            "block"
          ]
        }
      ],
      "padded-blocks": [
        "error",
        {
          "switches": "always"
        }
      ]
    },
    "plugins": [
      "babel"
    ]
  }
  